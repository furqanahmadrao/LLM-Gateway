{
  "name": "llm-gateway",
  "version": "1.0.0",
  "workspaces": [
    "ui"
  ],
  "description": "Unified OpenAI-compatible API gateway for multiple AI providers",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && node scripts/copy-assets.js",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate": "tsx src/db/migrate.ts",
    "seed": "tsx src/db/seed.ts",
    "db:setup": "pnpm migrate && pnpm seed"
  },
  "dependencies": {
    "aws4": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "google-auth-library": "^10.5.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/aws4": "^1.11.6",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "fast-check": "^3.14.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
